{% if pagination.pages > 0 %}
  <nav role="navigation" class="flex justify-center my-8">
    {% if pagination.previous %}
      <a class="border boder-gray-600 px-8 py-3 mx-1 rounded-sm font-medium text-gray-600 hover:bg-gray-600 hover:text-white" href="{{ pagination.previous.url }}">{{ pagination.previous.title }}</a>
    {% endif %}
    {% for part in pagination.parts %}
        {% if part.is_link %}
            <a 
              class="border boder-gray-600 px-8 py-3 mx-1 rounded-sm font-medium text-gray-600 hover:bg-gray-600 hover:text-white" 
              href="{{ part.url }}"
            >
                {{ part.title }}
            </a>
        {% else %}
        <span
          class="border boder-gray-600 px-8 py-3 mx-1 rounded-sm font-medium bg-gray-600 text-white" 
        >
          {{ part.title }}
        </span>    
        {% endif %}
    {% endfor %}
    {% if pagination.next %}
      <a class="border boder-gray-600 px-8 py-3 mx-1 rounded-sm font-medium text-gray-600  hover:bg-gray-600 hover:text-white" href="{{ pagination.next.url }}">{{ pagination.next.title }}</a>
    {% endif %}
  </nav>
{% endif %}